{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "meson compile",
            "type": "shell",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceFolder}/ccpl/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "meson setup",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ccpl"
            },
            "problemMatcher": []
        },
        {
            "label": "meson reconfigure",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup",
                "--reconfigure",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ccpl"
            },
            "problemMatcher": []
        }
    ]
}
